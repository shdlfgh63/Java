<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- 자동주입(@Autowired)을 하기 위해서 기술한다. -->
	<context:annotation-config></context:annotation-config>
	
	<bean id="tire"		class="com.edu.car.mycar06.KoreaTire"/>
	<bean id="tire2"	class="com.edu.car.mycar06.AmericaTire"/>
	<bean id="tire3"	class="com.edu.car.mycar06.EnglandTire"/>
	
	<bean id="car"		class="com.edu.car.mycar06.Car"/>

</beans>
